<%= stylesheet_link_tag "index" %>

<div id="wrapper">
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">

    <header>
      <h2><%= @movie.title %></h2>
    </header>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= @movie.released_on.to_s(:long) %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= @movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_price(@movie) %></td>
      </tr>
    </table>

  <%= link_to("Back to list", movies_path) %> | 
  <%= link_to("Edit", edit_movie_path(@movie)) %> | 
  <%= link_to("Delete", movie_path(@movie), method: :delete, data: {confirm: "Are you sure?"}) %>

                </div>
            </div>
        </div>
    </div>
</div>