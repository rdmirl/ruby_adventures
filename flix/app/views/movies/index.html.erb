<%= stylesheet_link_tag "index" %>

<div id="wrapper">
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">

                    <h1>Movies</h1>

                    <p>
                        <%= pluralize(@movies.count,"movie") %> found.
                    </p>

                    <% @movies.each do |movie| %>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title"><%= link_to(movie.title, movie_path(movie)) %></h2>
                        </div>
                        <div class="panel-body">
                            <p>
                                <%= truncate(movie.description, separator: ' ', length: 55, omission: " (continued)") %>
                            </p>
                            <table>
                                <tr>
                                    <th>Released: </th>
                                    <td><%= movie.released_on.to_s(:long) %></td>
                                </tr>
                                <tr>
                                    <th>Rating: </th>
                                    <td><%= movie.rating %></td>
                                </tr>
                                <tr>
                                    <th>Gross: </th>
                                    <td><%= format_price(movie) %></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <% end %>

                </div>
            </div>
        </div>
    </div>
</div>