<div class="page_content_container">

    <h1 class="displaying">Movies</h1>

    <p>
        <%= pluralize(@movies.count,"movie") %> found.
    </p>

    <% @movies.each do |movie| %>

        <div class="card">
            <div class="card_contents">
                <div class="panel-heading">
                    <h2 class="panel-title"><%= link_to(movie.title, movie_path(movie)) %></h2>
                    <div class="movie_thumb"><%= image_for(movie) %></div>
                </div>
                <div class="panel-body">
                    <p>
                        <%= truncate(movie.description, separator: ' ', length: 55, omission: " (continued)") %>
                    </p>
                    <table>
                        <tr>
                            <th>Released: </th>
                            <td><%= movie.released_on.to_s(:long) %></td>
                        </tr>
                        <tr>
                            <th>Rating: </th>
                            <td><%= movie.rating %></td>
                        </tr>
                        <tr>
                            <th>Gross: </th>
                            <td><%= format_price(movie) %></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

    <% end %>

</div>

