<div class="page_content_container">
<div class="card">
<div class="card_contents">

    <header>
      <h2><%= @movie.title %></h2>
      <div class="movie_thumb"><%= image_for(@movie) %></div>
    </header>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= @movie.released_on.to_s(:long) %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= @movie.rating %></td>
      </tr>
      <tr>
        <th>Gross:</th>
        <td><%= format_price(@movie) %></td>
      </tr>
    </table>

  <%= link_to("Back to list", movies_path) %> | 
  <%= link_to("Edit", edit_movie_path(@movie)) %> | 
  <%= link_to("Delete", movie_path(@movie), method: :delete, data: {confirm: "Are you sure?"}) %>

</div>
</div>
</div>